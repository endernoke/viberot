{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tiktok",
  "version": "0.1.0",
  "identifier": "com.endernoke.tiktok",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "title": "tiktok",
        "label": "main",
        "width": 800,
        "height": 600,
        "fullscreen": true,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false,
        "decorations": false,
        "center": true,
        "url": "https://www.tiktok.com/foryou"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ]
  }
}
